CREATE DATABASE BHARTIYA_TECH
CREATE TABLE EMP(ID INT IDENTITY,ENAME VARCHAR(100),DEPTNO INT,SALARY INT,PROFILE VARCHAR(100))
SP_HELP EMP
INSERT INTO EMP VALUES
